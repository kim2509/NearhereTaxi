        <activity
            android:name=".NewTaxiPostActivity"
            android:label="@string/title_activity_new_taxi_post"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".MoreUserInfoActivity"
            android:label="@string/title_activity_more_user_info" >
