        <activity
            android:name=".KakaoLoginActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/NoTitleBarTheme" >
        </activity>
        <activity
            android:name=".KakaoSignupActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/NoTitleBarTheme" >
        </activity>
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name=".FacebookConnect"
            android:label="@string/title_activity_facebook_connect"
            android:screenOrientation="portrait"
            android:theme="@style/NoTitleBarTheme" >
        </activity>
        <activity
            android:name=".ShareMyLocationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoTitleBarTheme" >
        </activity>
        <activity
            android:name=".RealtimeShareMyLocationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoTitleBarTheme" >
        </activity>
    </application>

</manifest>