<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />

    <style name="BaseTheme" parent="Theme.AppCompat.Light">
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:actionBarStyle">@style/baseActionBarStyle</item>
    </style>

    <style name="IntroTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowBackground">@drawable/intro</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="baseActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#7BA2C8</item>
        <item name="android:titleTextStyle">@style/BaseTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="BaseTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="NoTitleBarTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="btn_style">
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@drawable/btn_common_selector</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@drawable/btn_common_text_color_selector</item>
    </style>

    <style name="btn_important_style">
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/btn_important_selector</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="SearchDialogTheme">
        <item name="android:windowAnimationStyle">@style/SearchDialogTheme.Window</item>
    </style>

    <style name="SearchDialogTheme.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/abc_fade_in</item>
        <item name="android:windowExitAnimation">@anim/abc_fade_out</item>
    </style>

    <style name="CustomProgressBar" parent="android:attr/progressBarStyleHorizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/custom_progress_bar_horizontal</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

</resources>