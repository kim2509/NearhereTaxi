<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" >

        <com.tessoft.common.CustomImageView
            android:id="@+id/imgProfile"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/layoutComment"
            android:layout_toRightOf="@+id/imgProfile"
            android:singleLine="true"
            android:text="제목"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/layoutComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_chat" />

            <TextView
                android:id="@+id/txtReplyCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutUserInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtTitle"
            android:layout_below="@+id/txtTitle"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imgSex"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/male" />

            <TextView
                android:id="@+id/txtUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="..."
                android:textSize="12sp"
                android:textColor="#3B5D98" />
            
            <ImageView 
                android:id="@+id/imgKakaoIcon"
                android:layout_width="18dp" android:layout_height="18dp"
                android:layout_marginLeft="5dp"
                android:visibility="gone"
                android:src="@drawable/kakaotalk_icon" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtDepartureDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/layoutUserInfo"
            android:layout_alignBaseline="@+id/layoutUserInfo"
            android:layout_below="@+id/txtTitle"
            android:text="출발예정시간"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:id="@+id/layoutAddInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutUserInfo"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txtVehicle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:background="#F66C3C"
                android:padding="2dp"
                android:text="택시합승"
                android:visibility="gone"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtFareOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:background="#F66C3C"
                android:padding="2dp"
                android:text="나눠서 분담"
                android:visibility="gone"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtSex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:background="#F66C3C"
                android:padding="2dp"
                android:text="여자만"
                android:visibility="gone"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtNOP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:background="#F66C3C"
                android:padding="2dp"
                android:text="3명"
                android:visibility="gone"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtRepeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:background="#F66C3C"
                android:visibility="gone"
                android:padding="2dp"
                android:text="반복"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtReadCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtTitle"
            android:layout_below="@+id/layoutUserInfo"
            android:layout_marginTop="10dp"
            android:text="조회 : 5"
            android:textColor="@android:color/black"
            android:textSize="12dp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imgStatus"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitStart"
        android:src="@drawable/finished"
        android:visibility="gone" />

</FrameLayout>