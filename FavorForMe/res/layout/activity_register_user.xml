<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context="com.tessoft.nearhere.RegisterUserActivity" >

    <LinearLayout
        android:id="@+id/layoutRandom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:layout_above="@+id/com_kakao_login"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이근처 합승에 오신걸 환영합니다." />

        <Button
            android:id="@+id/btnRandomID"
            style="@style/btn_style"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:enabled="false"
            android:onClick="proceed"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="로딩중.." />
    </LinearLayout>

    <com.kakao.widget.LoginButton
        android:id="@+id/com_kakao_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1" />

